<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icontaxi" />

    <Button
        android:id="@+id/btnTaxi"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/taxi" />

    <Button
        android:id="@+id/btnUsuario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/btnTaxi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/usuario" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTaxi"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:text="Taxista" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUsuario"
        android:layout_centerHorizontal="true"
        android:text="Usuario"
        android:textColor="#FFF"
        android:textSize="20dp" />

</RelativeLayout>